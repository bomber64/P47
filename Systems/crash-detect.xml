<?xml version="1.0"?>

<system name="crash-detect">

  <property value="1">sim/failure-manager/engines/engine</property>

  <channel name="Over-G">

     <switch name="systems/crash-detect/over-g">
          <test value="1">
                accelerations/pilot-g gt 7.5
          </test>
          <output>sim/crashed</output>
     </switch> 

  </channel>

  <channel name="impact-ground">

     <switch name="systems/crash-detect/impact">
          <test logic="AND" value="1">
                position/h-agl-ft lt 1.0
                simulation/sim-time-sec gt 1.0
          </test>
          <output>sim/failure-manager/engines/engine</output>
     </switch>

  </channel>



</system>
